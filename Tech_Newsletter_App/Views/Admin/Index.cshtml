
@using Tech_Newsletter_App.ViewModels
@model List<SignUpVm>



<h2>Admin Access Granted:</h2>
<div class="row no-gutters m-3">
  <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
    <div class="card-header text-center">
      <h5 class="m-0">Sign-Ups</h5>
    </div>
    <div class="card-body">
      @foreach (var signup in Model) /*here we are using razor syntax to inplement c# to perform a loop to display one row for each signup on our table in the database for the admin to look at */
      {

        using (Html.BeginForm("Unsubscribe", "Admin", FormMethod.Post))
        {
          <input type="hidden" name="Id" value="@signup.Id" />
          <div class="row mb-3">
             <div class="col-2 ">
                 @signup.FirstName
             </div>
             <div class="col">
                 @signup.LastName
             </div>
             <div class="col-4">
                 @signup.EmailAddress
             </div>
             <div class="col">
               <button type="submit" class="btn btn-danger btn-block">
               Unsubscribe
               </button>
             </div>
          </div>
          }
        }
    </div>
  </div>
</div>


